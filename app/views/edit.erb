<h1>Recipe</h1>

<h4>
  Recipe Name: <%= @recipe.name %>
</h4>

<h4>
  Ingredients: <%= @recipe.ingredients %>
</h4>

<h4>
  Cook Time: <%= @recipe.cook_time %>
</h4>


<h1>Edit Recipe Form</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">
  
<input id="hidden" type="hidden" name="_method" value="patch">

<h4>
  Recipe Name: <input type="text" name="name" value="<%= @recipe.name %>">
</h4>

<h4>
  Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
</h4>

<h4>
  Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">
</h4>

<input type="submit" value="submit">
  
</form>